#include<iostream>
using namespace std; 
 void linear(int a[],int n)
 {
 	int temp=-1;
 	for(int i=0;i<5;i++)
 	{
 		if(a[i]==n)
 		{
 			cout<<"Element is found At location no."<<i+1<<endl;
 			temp=0;
		 }
		 }
	 if(temp==-1)
	 {
	 	cout<<"Element is not found";
	 }
 }     
  
 int main()
 {
 	int arr[5];
 	int number;
 	
 	cout<<"Enter the 5  lement :"<<endl;
 	for(int i=0;i<5;i++)
 	{
 		cin>>arr[i];
	 }
    
    cout<<"Please enter an element to search :"<<endl;
    int num;
    cin>>num;
    linear(arr,num);
 	return 0;
 	
 }
